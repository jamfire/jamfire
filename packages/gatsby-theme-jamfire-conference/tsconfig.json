{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}